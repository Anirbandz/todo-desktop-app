<div class="auth-container">
  <div class="auth-card">
    <h2>Create Account</h2>
    <p class="auth-subtitle">Join TaskFlow and boost your productivity</p>
    
    <% if (locals.error) { %>
      <div class="auth-error">
        <i class="fas fa-exclamation-triangle"></i>
        <%= error %>
      </div>
    <% } %>
    
    <form method="POST" action="/auth/signup" class="auth-form">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" required autocomplete="name" style="pointer-events: auto; z-index: 10; position: relative;">
      </div>
      
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required autocomplete="email" style="pointer-events: auto; z-index: 10; position: relative;">
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required autocomplete="new-password" style="pointer-events: auto; z-index: 10; position: relative;">
        <small>Must be at least 6 characters long</small>
      </div>
      
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required autocomplete="new-password" style="pointer-events: auto; z-index: 10; position: relative;">
      </div>
      
      <button type="submit" class="btn btn-primary btn-full">
        <i class="fas fa-user-plus"></i>
        Create Account
      </button>
    </form>
    
    <div class="auth-divider">
      <span>or</span>
    </div>
    
    <div class="auth-links">
      <p>Already have an account? <a href="/auth/login">Sign in</a></p>
    </div>
  </div>
</div> 